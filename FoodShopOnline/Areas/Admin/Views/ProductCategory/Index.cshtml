@model List<Model.EnityFramework.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh Mục Sản Phẩm
}
@section jsFooter{
    <script src="/content/admin/js/controller/productCategorycontroller.js"></script>
}
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="content">
            @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <a class="btn btn-primary" href="/Admin/ProductCategory/Create">Thêm mới</a>
                    </div>
                </div>
            }
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>TenDanhMuc</th>
                        <th>Alias</th>
                        <th>TieuDeSeo</th>
                        <th>NgayTao</th>
                        <th>NguoiTao</th>
                        <th>TrangThai</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>TenDanhMuc</th>
                        <th>Alias</th>
                        <th>TieuDeSeo</th>
                        <th>NgayTao</th>
                        <th>NguoiTao</th>
                        <th>TrangThai</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Alias</td>
                            <td>@item.SeoTitile</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.CreatedBy</td>
                            <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                            <td>
                                <a href="~/Admin/ProductCategory/Edit/@item.ID">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa danh mục sản phẩm này không?",
                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


