@model PagedList.IPagedList<Model.EnityFramework.User>
@using PagedList.Mvc;
@{
    /**/

    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách người dùng
}
@section jsFooter{
    <script src="/content/admin/js/controller/userController.js"></script>
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "User", FormMethod.Get))
        {
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <a class="btn btn-success" href="/Admin/User/Create">Thêm mới</a>
                </div>
                <div class="col-sm-12 col-md-4">
                    <input type="text" value="@ViewBag.SearchString" class="form-control" placeholder="Nhập thông tin người dùng..." aria-controls="dataTable" name="searchString" />
                </div>
                <div class="col-sm-12 col-md-2">
                    <input type="submit" class="btn btn-outline-success" value="Tìm kiếm" />
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>TenDangNhap</th>
                        <th>TenNguoiDung</th>
                        @*<th>DiaChi</th>*@
                        <th>Email</th>
                        <th>DienThoai</th>
                        <th>GioiTinh</th>
                        <th>QuyenTK</th>
                        <th>TrangThai</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>TenDangNhap</th>
                        <th>TenNguoiDung</th>
                        @*<th>DiaChi</th>*@
                        <th>Email</th>
                        <th>DienThoai</th>
                        <th>GioiTinh</th>
                        <th>QuyenTK</th>
                        <th>TrangThai</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">

                            <td>@item.UserName</td>
                            <td>@item.Name</td>
                            @*<td>@item.Address</td>*@
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Gender</td>
                            <td>@item.GroupID</td>
                            <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>
                            <td style="width: 100px; height: 50px">
                                <a href="~/Admin/User/Edit/@item.ID">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa tài khoản này không?",
                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="form-group" style="margin-left: 950px; font-size: 25px">
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->