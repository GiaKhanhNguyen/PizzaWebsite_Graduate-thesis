@model List<Model.ViewModel.OrderViewModel>
@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Chi Tiết Đơn Hàng
}
<div class="card shadow mb-4">
    <div class="card-body">
        <a class="btn btn-primary" href="/Admin/Bill/Index">Thông Tin Đơn hàng</a>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ProductID</th>
                        <th>Name</th>
                        <th>CategoryID</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ProductID</th>
                        <th>Name</th>
                        <th>CategoryID</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDetail.ProductID</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.CategoryID</td>
                            <td>@item.Product.Price</td>
                            <td>@item.OrderDetail.Quantity</td>
                            <td>@item.OrderDetail.Price</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>





