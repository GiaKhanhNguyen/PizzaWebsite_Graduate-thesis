@model List<Model.ViewModel.MenuViewModel>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Chức năng
}
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="color: black">
                <thead>
                    <tr>
                        <th>TenChucNang</th>
                        <th>URL</th>
                        <th>Icon</th>
                        <th>ThuTuHienThi</th>
                        <th>NhomChucNang</th>
                        <th>Target</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>TenChucNang</th>
                        <th>URL</th>
                        <th>Icon</th>
                        <th>ThuTuHienThi</th>
                        <th>NhomChucNang</th>
                        <th>Target</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Menu.Status == true)
                            {
                                <tr id="row_@item.Menu.ID">
                                    <td>@item.Menu.Name</td>
                                    <td>@item.Menu.URL</td>
                                    <td>@item.Menu.Icon</td>
                                    <td>@item.Menu.DisplayOrder</td>
                                    <td>@item.MenuGroup.Name</td>
                                    <td>@item.Menu.Target</td>
                                    <td style="width: 100px">
                                        <a href="~/Admin/System/EditMenu/@item.Menu.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "DeleteMenu", new { @id = item.Menu.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa mục này không?",
                                       OnComplete = "$('#row_" + @item.Menu.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




