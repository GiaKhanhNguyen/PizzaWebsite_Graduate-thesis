@model List<FoodShopOnline.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal total = 0;
    int quantity = 0;
}
@section jsFooter{

    <script src="~/content/client/controller/CartController.js"></script>
}
