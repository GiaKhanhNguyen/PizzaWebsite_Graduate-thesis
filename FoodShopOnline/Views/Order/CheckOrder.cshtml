
@{
    ViewBag.Title = "CheckOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["CheckOrder"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                @Html.Raw(TempData["CheckOrder"]);
            };
    </script>
}

<center style="margin-bottom: 200px; margin-top: 30px">
    <br />
    <p style="font-size:30px">KIỂM TRA ĐƠN HÀNG</p>
    <br />
    @using (Html.BeginForm("CheckOrder", "Order", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" });

        <div class="form-group" style="margin-right: 100px">
            <label style="font-size:20px; margin-right: 20px">Nhập mã đơn hàng</label>
            <input type="text" style="font-size: 17px" name="id" id="id" />
            <button type="submit" class="btn btn-lg bg-primary" style="font-size: 15px; width: 100px; margin-left: 20px; margin-bottom:10px">Kiểm tra</button>
        </div>
        @* @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    }
</center>

