@model Model.EnityFramework.Contact

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/content/client/controller/contactController.js"></script>
}
<br />
<section class="section-content padding-y">
    <div class="card mx-auto" style="width: 100%; height: 100%">
        <article class="card-body">
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <p style="margin-left: 110px; font-family: 'Times New Roman', Times, serif">Liên hệ với chúng tôi</p>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="fa fa-user" style="font-size: 15px; margin-right: 30px"> Họ Và Tên*</label>
                                    <input id="txtName" type="text" placeholder="Nhập tên của bạn..." class="form-group" style="font-size: 15px; width: 230px" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-size: 15px; margin-right: 45px" class="fas fa-home"> Địa Chỉ*</label>
                                    <input id="txtAddress" type="text" placeholder="Nhập địa chỉ..." class="form-group" style="font-size: 15px; width: 230px" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-size: 15px; margin-right: 55px" class="fas fa-envelope"> Email*</label>
                                    <input id="txtEmail" type="text" placeholder="Nhập địa chỉ email của bạn..." class="form-group" style="font-size: 15px; width: 230px" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-size: 15px; margin-right: 26px" class="fas fa-phone"> Điện thoại*</label>
                                    <input id="txtPhone" type="text" placeholder="Nhập số điện thoại..." class="form-group" style="font-size: 15px; width: 230px" />
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label style="font-size: 15px; margin-right: 26px" class="fas fa-file-archive"> Tiêu Đề*</label>
                                    <input id="txtTitle" type="text" placeholder="Nhập tiêu đề..." class="form-group" style="font-size: 15px; width: 530px" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label style="font-size: 15px; margin-right: 26px" class="fas fa-file-alt"> Nội Dung*</label>
                                    <textarea id="txtContent" class="form-group" placeholder="Nhập nội dung của bạn." style="width: 530px; height: 100px; font-size: 20px"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button id="btnSend" type="submit" class="btn btn-lg btn-success" style="font-size: 15px; background-color:blue; margin-left: 330px; width: 200px">
                                    Gửi
                                    <span class="fas fa-arrow-right"></span>
                                </button>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <p style="text-align: center; font-family: 'Times New Roman', Times, serif">Thông Tin Liên hệ</p>
                            <div style="text-align: center">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>



