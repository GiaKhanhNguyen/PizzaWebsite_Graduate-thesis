@model Model.EnityFramework.User

@{
    ViewBag.Title = "InformationAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("InformationAccount","User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section class="section-content padding-y">
            <div class="card mx-auto" style="width: 100%; height: 500px">
                <article class="card-body">
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <p style="text-align: center; font-family: Arial, Times, serif">Hồ Sơ Của Tôi</p>
                                <hr />
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="fa fa-user" style="font-size: 15px; margin-right: 30px; width: 120px"> Tên Đăng Nhập</label>
                                        <input name="UserName" type="text" value="@Model.UserName" class="form-group" style="font-size: 15px; width: 500px" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-user" style="font-size: 15px; margin-right: 30px; width: 120px"> Họ Và Tên</label>
                                        <input name="Name" type="text" value="@Model.Name" class="form-group" style="font-size: 15px; width: 500px" />
                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-key" style="font-size: 15px; margin-right: 30px; width: 120px"> Mật khẩu</label>
                                        <input id="Password" type="password" value="@Model.Password" class="form-group" style="font-size: 15px; width: 400px" disabled />
                                        <a href="/doi-mat-khau" style="font-size: 15px; margin-left: 20px">Đổi mật khẩu</a>
                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-envelope" style="font-size: 15px; margin-right: 30px; width: 120px"> Email</label>
                                        <input name="Email" type="text" value="@Model.Email" class="form-group" style="font-size: 15px; width: 500px" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-phone" style="font-size: 15px; margin-right: 30px; width: 120px"> Điện Thoại</label>
                                        <input name="Phone" type="text" value="@Model.Phone" class="form-group" style="font-size: 15px; width: 500px" />
                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-genderless" style="font-size: 15px; margin-right: 30px; width: 120px"> Giới Tính</label>
                                        @*<input id="Gender" type="text" value="@Model.Gender" class="form-group" style="font-size: 15px; width: 500px" />*@
                                        @if (Model.Gender == "Nam")
                                        {
                                            <a style="font-size: 15px"><input type="radio" name="Gender" id="Male" value="1" checked />  Nam</a>
                                            <a style="font-size: 15px; margin-left: 30px"><input type="radio" name="Gender" id="Female" value="0" />  Nữ</a>
                                        }
                                        else
                                        {
                                            <a style="font-size: 15px"><input type="radio" name="Gender" id="Male" value="1" />  Nam</a>
                                            <a style="font-size: 15px; margin-left: 30px"><input type="radio" name="Gender" id="Female" checked value="0" />  Nữ</a>
                                        }

                                    </div>
                                    <div class="form-group">
                                        <label class="fa fa-home" style="font-size: 15px; margin-right: 30px; width: 120px"> Địa Chỉ</label>
                                        <input name="Address" type="text" value="@Model.Address" class="form-group" style="font-size: 15px; width: 500px" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <section class="section-content padding-y">
                                        <div class="card mx-auto" style="width: 100%; height: 100%">
                                            <article class="card-body">
                                                <center>
                                                    <img src="@Model.Avatar" style="height: 200px; width: 120px" />
                                                </center>
                                            </article>
                                        </div>
                                    </section>
                                    <center>
                                        <input type="file" name="file" id="file" style="height: 30px; width: 100px; font-size: 15px; margin-top: 20px" value="Chọn ảnh" />
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
                <div class="col-md-6">
                    <center>
                        <button type="submit" class="btn btn-lg btn-success" style="font-size: 15px; background-color:#04354c; height: 40px; width: 100px">
                            Lưu
                        </button>
                    </center>
                </div>
            </div>
        </section>
    </div>

}
