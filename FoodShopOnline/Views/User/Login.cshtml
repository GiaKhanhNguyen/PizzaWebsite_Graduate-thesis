@model FoodShopOnline.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["DangKyMess"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                @Html.Raw(TempData["DangKyMess"]);
            };
    </script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" type="text/css" href="\content\client\dndkv2.css" />
    <div class="dkdnpage" style="margin-top: 160px">
        <div class="form-horizontal">
            <hr />
            <div class="form-group" style="margin-bottom: -20px">
                <p>Đăng Nhập</p>
            </div>
            <div style="margin-bottom: -20px; text-align:center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>    
            <div class="form-group" style="margin-bottom: -10px" >
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "fas fa-user-circle" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", style = "height:50px; font-size: 15px" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-bottom: -20px">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "fas fa-key" })
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            @*<div class="form-group">
            <input type="checkbox" onclick="showpassword()"> Hiện mật khẩu&nbsp;&nbsp;
            <input type="checkbox"> Nhớ mật khẩu
        </div>*@
            <div class="form-group" style="margin-bottom: -7px">
                <input type="submit" value="Đăng Nhập"/>
            </div>
            <div class="form-group" style="margin-bottom: -10px">
                <a href="/quen-mat-khau" style="font-size: 15px">Quên mật khẩu</a>
            </div>
            <hr />
            <div class="form-group" style="margin-bottom: -5px">
                <div class="abc">
                    <a class="t1" href="/User/LoginFacebook" style="width: 100%">
                        <img src="/content/client/images/facebook.png" />
                        Đăng nhập bằng Facebook
                    </a>
                </div>
            </div>
            <div class="form-group" style="text-align: center; margin-bottom: -10px">
                <span>Bạn mới biết đến Royal' Pizza?  </span><a href="/dang-ky">Đăng ký</a>
            </div>

        </div>
    </div>
}
<script>
    function showpassword() {
        var x = document.getElementById(model.Password);
        if (x.type == (model.Password)) {
            x.type = "text";
        }
        else {
            x.type = (model.Password);
        }
    }
</script>
